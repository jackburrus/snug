{
  "name": "snug-ai",
  "version": "0.1.1",
  "description": "Fit the right context into your LLM's window",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir dist --target node --format esm",
    "build:types": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "llm",
    "context-window",
    "token-optimization",
    "context-engineering",
    "ai",
    "rag",
    "agent",
    "lost-in-the-middle",
    "token-budget"
  ],
  "author": "Jack Burrus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackburrus/snug.git"
  },
  "homepage": "https://github.com/jackburrus/snug#readme",
  "bugs": {
    "url": "https://github.com/jackburrus/snug/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
